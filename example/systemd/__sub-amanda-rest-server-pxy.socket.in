[Unit]
Description=Amanda Backup Server Socket
# sends starts or restarts to
BindsTo=__sub-amanda-rest-server.service
# delayed if no network active
After=network-online.target

[Socket]
# local only!
ListenStream=[::1]:5000
##SELinuxContext=system_u:system_r:amanda_data_t:s0
Accept=no
MaxConnections=5

[Install]
Alias=amanda-rest-server-pxy.socket
# receives starts from ..
RequiredBy=__sub-amanda-rest-server.service
