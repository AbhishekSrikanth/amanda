[Unit]
Description=Amanda Rest Server Proxy
# just fail if missing...
ConditionPathExists=@DEFAULT_SECURITY_FILE@
# starts up, waits for but can be stopped by ...
BindsTo=amanda-rest-server-pxy.socket
BindsTo=amanda-rest-server.service
After=network-online.target
After=amanda-rest-server.service
After=amanda-rest-server-pxy.socket

[Service]
User=@CLIENT_LOGIN@
Group=@SETUID_GROUP@
ExecStart=/usr/lib/systemd/systemd-socket-proxyd @amdatadir@/amanda-rest.sock
PrivateTmp=yes
