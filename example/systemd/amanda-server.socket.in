[Unit]
Description=Amanda Backup Server Socket

[Socket]
ListenStream=10080
##SELinuxContext=system_u:system_r:amanda_data_t:s0
Accept=yes
KeepAlive=true
######## dont wait two hours
KeepAliveTimeSec=120
######## speed up unreplied bursts
NoDelay=true
######## set TOS for TCP outputs if needed (0-6 only normally allowed)
#Priority= 
######## keep the daemon asleep until real data arrives
DeferAcceptSec=5
IPTOS=throughput
# allow localhost-only socket elsewhere
ReusePort=true
#SELinuxContextFromNet=
TCPCongestion=cubic
MaxConnections=10
#ReceiveBuffer=
#SendBuffer=
#TCPCongestion=bbr
#KeepAliveIntervalSec=75
#KeepAliveProbes=9

[Install]
WantedBy=multi-user.target
